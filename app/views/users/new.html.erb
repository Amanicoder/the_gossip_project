<h1 class="text-center mt-4">Inscription</h1>

<% flash.each do |type, msg| %>
  <div class="alert alert-danger text-center" role="alert">
    <%= msg %>
  </div>
<% end %>


<div class="container col-md-3">
  <div class="form-group text-center">

    <%= form_tag users_path, method: "post" do %>

      <div class="form-group">
        <%= label_tag 'Prénom' %>
        <%= text_field_tag 'Prénom',nil, class: 'form-control' %>

      </div>

      <div class="form-group">
        <%= label_tag 'nom' %>
        <%= text_field_tag 'nom',nil, class: 'form-control' %>

      </div>

      <div class="form-group">
        <%= label_tag 'email' %>
        <%= text_field_tag 'email',nil, class: 'form-control' %>

      </div>

      <div class="form-group">
        <%= label_tag 'age' %>
        <%= text_field_tag 'age',nil, class: 'form-control' %>

      </div>

      <div class="form-group">
        <%= label_tag 'description' %>
        <%= text_area_tag 'description',nil, class: 'form-control' %>

      </div>

      <div class="form-group">
        <%= label_tag 'Mot de passe' %>
        <%= password_field_tag 'Mot de passe',nil, class: 'form-control' %>

      </div>

      <%= submit_tag "Valider inscription", class: "btn btn-primary" %>

    <% end %>

  </div>

</div>
